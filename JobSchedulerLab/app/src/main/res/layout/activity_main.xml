<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ezequielc.jobschedulerlab.MainActivity">

    <LinearLayout
        android:id="@+id/old_and_new"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Old"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New"
            android:padding="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/periodic_one_row"
        android:layout_toEndOf="@id/old_and_new"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/periodic_one_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PeriodicOne"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/periodic_one_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PeriodicOne"
            android:padding="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/network_row"
        android:layout_toEndOf="@id/periodic_one_row"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/network_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Network"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/network_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Network"
            android:padding="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/periodic_two_row"
        android:layout_toEndOf="@id/network_row"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/periodic_two_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PeriodicTwo"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/periodic_two_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PeriodicTwo"
            android:padding="8dp"/>
    </LinearLayout>
</RelativeLayout>
